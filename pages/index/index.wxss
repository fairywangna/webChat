/**index.wxss**/
.container{
  overflow: hidden;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.rotationChart{
  width: 100%;
  height: 400rpx;
}
.rotationChart image{
  width: 100%;
  height: 100%;
}
.content{
  width: 100%;
  overflow: hidden;
  margin: 25rpx auto;
}
.content-1{
  display: block;
  width: 100%;
  height: 140rpx;
  margin-bottom: 25rpx;
}
.content-2{
  display: block;
  width: 100%;
  height: 270rpx;
}
.content-3{
  display: block;
  width: 450rpx;
  height: 86rpx;
  margin: 42rpx auto;
}
.division{
  width: 100%;
  height: 24rpx;
  background-color: #f4f4f4;
}
.poson-box{
  width: 100%;
  overflow: hidden;
}
.poson{
  width: 710rpx;
  height: 400rpx;
  border: 1rpx solid #BCBBBB;
  margin: 29rpx auto;
}
.introduce{
  width: 710rpx;
  height: 80rpx;
  margin: 36rpx 0 43rpx 0;
}
.introduce image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  margin: 0 19rpx 0 28rpx;
}
.introduce .name{
  display: block;
  font-size: 28rpx;
  color: #BCBBBB;
}
.introduce text{
  display: block;
  font-size: 26rpx;
  margin-top:12rpx;
  color: #000000;
}
.footer image{
  width: 710rpx;
  height: 293rpx;
  margin-bottom: 15rpx;
}


